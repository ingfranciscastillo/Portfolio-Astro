---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/Favicon-white.png" />
		<meta name="generator" content={Astro.generator} />
		<!-- Primary Meta Tags -->
		<title>Francis Miguel Castillo Cruz | Portafolios</title>
		<meta name="title" content="Francis Miguel Castillo Cruz | Portafolios" />
		<meta name="description" content="Transformo ideas en experiencias digitales. Desarrollo interfaces modernas, funcionales y optimizadas para cautivar a tus usuarios. ¡Hagamos realidad tu próximo proyecto web!" />
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://Francisportafolios.dev/" />
		<meta property="og:title" content="Francis Miguel Castillo Cruz | Portafolios" />
		<meta property="og:description" content="Transformo ideas en experiencias digitales. Desarrollo interfaces modernas, funcionales y optimizadas para cautivar a tus usuarios. ¡Hagamos realidad tu próximo proyecto web!" />
		<meta property="og:image" content="https://metatags.io/images/meta-tags.png" />
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://Francisportafolios.dev/" />
		<meta property="twitter:title" content="Francis Miguel Castillo Cruz | Portafolios" />
		<meta property="twitter:description" content="Transformo ideas en experiencias digitales. Desarrollo interfaces modernas, funcionales y optimizadas para cautivar a tus usuarios. ¡Hagamos realidad tu próximo proyecto web!" />
		<meta property="twitter:image" content="https://metatags.io/images/meta-tags.png" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--bg-color: #151515;
		--text-color: #F9F6EF;
		--nav-color: #0d0d0d;
		--smoke: #E3E1E6;
		--blue: #193497;
		--yellow: #FCCB30;
		
	}
	html {
		font-family: "Aventa", system-ui, sans-serif;
		background: var(--bg-color);
		color: var(--text-color);
		font-display: swap;
	}

	body {
		background-image: url('/bg.webp');
		background-size: auto;
		background-repeat: round;
	}
	
	@font-face {
		font-family: "Aventa";
		src: url("/fonts/Aventa-Light.woff2");
		font-weight: 300;
		font-style: normal;
		font-display: wrap;
	}

</style>
