---
import { Font } from 'astro:assets';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/Favicon-white.png" />
		<meta name="generator" content={Astro.generator} />
		<!-- Primary Meta Tags -->
		<title>Francis Castillo | Portafolio</title>
		<meta name="title" content="Francis Castillo | Portafolio" />
		<meta name="description" content="Transformo ideas en experiencias digitales. Desarrollo interfaces modernas, funcionales y optimizadas para cautivar a tus usuarios. ¡Hagamos realidad tu próximo proyecto web!" />
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://Francisportfolio.dev/" />
		<meta property="og:title" content="Francis Miguel Castillo Cruz | Portafolios" />
		<meta property="og:description" content="Transformo ideas en experiencias digitales. Desarrollo interfaces modernas, funcionales y optimizadas para cautivar a tus usuarios. ¡Hagamos realidad tu próximo proyecto web!" />
		<meta property="og:image" content="/Logo.webp" />
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://Francisportfolio.dev/" />
		<meta property="twitter:title" content="Francis Miguel Castillo Cruz | Portafolios" />
		<meta property="twitter:description" content="Transformo ideas en experiencias digitales. Desarrollo interfaces modernas, funcionales y optimizadas para cautivar a tus usuarios. ¡Hagamos realidad tu próximo proyecto web!" />
		<meta property="twitter:image" content="/Logo.webp" />
		<Font cssVariable='--font-satoshi' preload />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	
	html {
		font-display: swap;
	}

	body {
		font-family: var(--font-satoshi), sans-serif;
	}

</style>
